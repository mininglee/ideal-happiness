CREATE TABLE Hospitals 
(
    hospital_id INT GENERATED ALWAYS AS IDENTITY PRIMARY KEY,
    member_id INT,
    location VARCHAR(255),
    details VARCHAR(255),
    date INT
);

-- 호텔 테이블
CREATE TABLE Hotels (
    hotel_id INT GENERATED ALWAYS AS IDENTITY PRIMARY KEY,
    member_id INT,
    location VARCHAR(255),
    details VARCHAR(255),
    date INT
    many INT
);

-- 여행지 테이블
CREATE TABLE Destinations (
    destination_id INT GENERATED ALWAYS AS IDENTITY PRIMARY KEY,
    member_id INT,
    location VARCHAR(255),
    details VARCHAR(255),
    date INT
);

-- 쇼핑물품 테이블
CREATE TABLE ShoppingItems (
    item_id INT GENERATED ALWAYS AS IDENTITY PRIMARY KEY,
    member_id INT,
    price VARCHAR(300)
    img VARCHAR(255)
    category VARCHAR(50),  -- 사료, 간식, 장난감, 샴푸비누 등의 카테고리
    details VARCHAR(255),
    FOREIGN KEY (member_id) REFERENCES Members(id)
);


CREATE TABLE BulletinBoard (
    id INT AUTO_INCREMENT,
    member_id INT,
    category VARCHAR(50),
    details VARCHAR(255),
    views INT DEFAULT 0,
    PRIMARY KEY (id)
);
