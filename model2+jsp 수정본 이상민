<%@ page import="member.MemberDao" %>
<%@ page import="java.util.Calendar" %>
<%@ page import="java.util.Date" %>
<%@ page import="java.text.SimpleDateFormat" %>

<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8" %>

<%
    // 세션에서 강아지 종류와 나이 가져오기
    String breed = (String) session.getAttribute("breed");
    String age = (String) session.getAttribute("age");

    // 데이터베이스 연결
    MemberDao memberDao = new MemberDao();
    memberDao.connect();

    // 강아지 정보 조회
    String exerciseAmount = "";
    String diseases = "";
    String heightRange = "";
    String weightRange = "";

    // 강아지 종류와 나이에 따라 적합한 정보를 조회합니다.
    if (breed != null && age != null) {
        int dogAge;
        if (age.equals("어린 강아지")) {
            dogAge = 1;
        } else if (age.equals("성장 중인 강아지")) {
            dogAge = 2;
        } else {
            SimpleDateFormat format = new SimpleDateFormat("yyyy-MM-dd");
            Date birthDate = format.parse(age);
            Calendar calendar = Calendar.getInstance();
            calendar.setTime(new Date());
            int currentYear = calendar.get(Calendar.YEAR);
            calendar.setTime(birthDate);
            int birthYear = calendar.get(Calendar.YEAR);
            dogAge = currentYear - birthYear;
        }

        // 강아지 정보 조회
        if (dogAge <= 1) {
            exerciseAmount = memberDao.getExerciseAmountForPuppy(breed);
            diseases = memberDao.getDiseasesForPuppy(breed);
            heightRange = memberDao.getHeightRangeForPuppy(breed);
            weightRange = memberDao.getWeightRangeForPuppy(breed);
        } else if (dogAge <= 2) {
            exerciseAmount = memberDao.getExerciseAmountForYoungDog(breed);
            diseases = memberDao.getDiseasesForYoungDog(breed);
            heightRange = memberDao.getHeightRangeForYoungDog(breed);
            weightRange = memberDao.getWeightRangeForYoungDog(breed);
        } else {
            exerciseAmount = memberDao.getExerciseAmountForAdultDog(breed);
            diseases = memberDao.getDiseasesForAdultDog(breed);
            heightRange = memberDao.getHeightRangeForAdultDog(breed);
            weightRange = memberDao.getWeightRangeForAdultDog(breed);
        }
    }

    // 데이터베이스 연결 해제
    memberDao.disconnect();
%>

